{
  "type": "module",
  "private": false,
  "name": "reveal-me",
  "version": "0.1.3",
  "license": "MIT",
  "description": "Craft stunning Reveal.js presentations effortlessly from your Markdown files.",
  "author": {
    "name": "Rodolphe Barbanneau",
    "email": "rodolphe.barbanneau@gmail.com"
  },
  "bin": {
    "reveal-me": "bin/main.js"
  },
  "files": [
    "bin",
    "src"
  ],
  "scripts": {
    "start": "node bin/main.js src/examples --watch",
    "lint": "eslint bin src tests",
    "format": "prettier --write bin/**/*.js src/**/*.js tests/**/*.js **/*.md",
    "test": "jest tests/*.spec.js",
    "release": "release-it"
  },
  "keywords": [
    "reveal",
    "revealjs",
    "slides",
    "cli",
    "html",
    "markdown",
    "md",
    "pdf",
    "express",
    "static"
  ],
  "homepage": "https://github.com/rodolphebarbanneau/reveal-me#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rodolphebarbanneau/reveal-me.git"
  },
  "bugs": {
    "url": "https://github.com/rodolphebarbanneau/reveal-me/issues"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "chokidar": "^3.5.3",
    "datatables.net": "^1.13.8",
    "datatables.net-bs5": "^1.13.8",
    "debug": "^4.3.4",
    "express": "^4.18.2",
    "font-awesome": "^4.7.0",
    "glob": "^10.3.10",
    "handlebars": "^4.7.8",
    "highlight.js": "^11.9.0",
    "inquirer": "^9.2.12",
    "inquirer-autocomplete-prompt": "^3.0.1",
    "jquery": "^3.7.1",
    "lodash": "^4.17.21",
    "mermaid": "^10.6.1",
    "open": "^10.0.3",
    "reveal.js": "^5.0.2",
    "reveal.js-menu": "^2.1.0",
    "reveal.js-mermaid-plugin": "^2.1.0",
    "serve-favicon": "^2.5.0",
    "upath": "^2.0.1",
    "update-notifier": "^7.0.0",
    "ws": "^8.16.0",
    "yaml-front-matter": "^4.1.1",
    "yargs-parser": "^21.1.1"
  },
  "optionalDependencies": {
    "puppeteer": "^21.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@types/inquirer": "^9.0.7",
    "@types/inquirer-autocomplete-prompt": "^3.0.3",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@types/reveal.js": "^4.4.8",
    "@types/yaml-front-matter": "^4.1.3",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-import-meta": "^2.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-mock": "^29.7.0",
    "prettier": "^3.2.4",
    "release-it": "^17.0.3"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm test"
      ]
    },
    "github": {
      "release": true
    }
  }
}
