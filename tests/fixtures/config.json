{
  "project": "Test",
  "git": "https://github.com/rodolphebarbanneau/reveal-me/blob/main",
  "baseUrl": "/",
  "rootDir": "src",
  "preprocessorPaths": ["preprocessor.js"],
  "scriptPaths": [
    "https://cdn.jsdelivr.net/npm/reveal.js-mermaid-plugin@2.1.0/plugin/mermaid/mermaid.min.js"
  ],
  "presentation": {
    "theme": "light",
    "plugins": ["RevealMermaid"],
    "settings": {
      "mermaid": {
        "theme": "base",
        "themeCSS": "*{ line-height: 1; text-align: initial; }",
        "themeVariables": {
          "darkMode": false,
          "fontFamily": "Source Sans Pro",
          "fontSize": "24px",
          "primaryColor": "#d3d9e7",
          "primaryBorderColor": "#050f25",
          "secondaryColor": "#253861",
          "tertiaryColor": "#3d0561",
          "lineColor": "#d9220c"
        }
      }
    }
  }
}
